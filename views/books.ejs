<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    
    <title>Books</title>
</head>
<body>
    <div class="container">
        <h1 class="display-4 mb-2">Library</h1>
        <% if (errors) { %>
            <ul>
                <% errors.forEach(error => { %>
                    <li class="text-danger">
                        <%= error %>
                    </li>
                <% }) %>
            </ul>
        <% } %>

        <form method="POST">
            <div class="form-group">
                <label>Title</label>
                <input type="text" name="title" class="form-control" placeholder="enter title">
            </div>
            <div class="form-group">
                <label>Description</label>
                <input type="text" name="description" class="form-control" placeholder="enter description">
            </div>
            <div class="form-group">
                <label>Author</label>
                <input type="text" name="author" class="form-control" placeholder="author">
            </div>
            
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        
        
        <div class="mt-5">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Author</th>
                        <th scope="col">Available To Borrow</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
               
                <tbody>
                        <% if (books) {
                            books.forEach((book, i) => { %>
                                <tr>
                                    <th scope="row"> <%= i + 1 %> </th>
                                    <td><%= book.title %></td>
                                    <td><%= book.description %></td>
                                    <td><%= book.author %></td>
                                    <td><%= book.availableToBorrow %></td>
                                    <td><a href="/books/<%= book.id %>/edit">Edit</a> | <a href="/books/<%= book.id %>/delete" onclick="return confirm('return this book?')" >Delete</a></td>
                                </tr>
                        <%    })
                        } else { %>
                            <tr>
                                <th scope="row">Empty</th>
                                <td>Empty</td>
                                <td>Empty</td>
                                <td>Empty</td>
                                <td>Empty</td>
                                <td>Empty</td>
                            </tr>
                        <% } %>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>